<h1>Admin::Shops#index</h1>
<p>Find me in app/views/admin/shops/index.html.erb</p>
<h1>サーフショップ一覧</h1>
<table>
	<thead>
		<tr>
			<th>エリア</th>
			<th>画像</th>
			<th>ショップ名</th>
			<th>住所</th>
			<th>電話番号</th>
			<th>メールアドレス</th>
			<th>詳細</th>
		</tr>
	</thead>
	<tbody>
	<% @shops.each do |shop| %>
	<tr>
		<td><%= shop.area.name %></td>
		<td><%= attachment_image_tag shop, :shop_image, fallback: "no-image.png", :size => "100x100" %></td>
		<td><%= shop.name %></td>
		<td><%= shop.address %></td>
		<td><%= shop.phone_number %></td>
		<td><%= shop.email %></td>
		<td><%= shop.about %></td>
	</tr><% end %>
</tbody>
</table>

<%= link_to "ショップ新規登録", new_admin_shop_path %>