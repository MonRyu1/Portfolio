<div class="admin-local-edit container">
	<div class="row">
		<div class="col-sm-12">
			<h3 class="title">"<%= @local.user_name %>"さんのステータスを変更します</h3>
			<%= form_for @local, url: admin_local_path(@local) do |f| %>
				<p><%= f.radio_button :is_active, "true" %> 有効</p>
				<p><%= f.radio_button :is_active, "false" %> 退会</p>
				<p><%= f.submit "変更する", "data-confirm" => "本当に変更しますか？", class: "btn btn-danger" %></p>
			<% end %>
		</div>
	</div>
</div>