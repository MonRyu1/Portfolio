<div class="admin-user-index container">
	<div class="row">
		<div class="col-sm-12">
			<h1 class="title">ユーザー</h1>
			<table>
					<thead>
						<tr>
						<th>ユーザーネーム</th>
						<th>性 名</th>
						<th>メールアドレス</th>
						<th>レベル</th>
						<th>ステータス</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<td>
								<p><%= attachment_image_tag user, :user_image, fallback: "no-profile-img.png", :size => "50x50", class: "admin-user-img" %></p>
									<%= user.user_name %>
							</td>
							<td><%= user.last_name %> <%= user.first_name %></td>
							<td><%= user.email %></td>
							<td><%= user.level %></td>
							<td><%= user.is_active %></td>
							<td><%= link_to "編集", edit_admin_user_path(user), class: "btn btn-primary" %></td>
						</tr>
					<% end %>
					</tbody>
			</table>
		</div>
	</div>
</div>