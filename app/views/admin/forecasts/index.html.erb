<h1>Admin::Forecasts#index</h1>
<p>Find me in app/views/admin/forecasts/index.html.erb</p>
<h3>波予報一覧</h3>
<table>
	<thead>
		<tr>
			<th>ユーザー</th>
			<th>スポット</th>
			<th>波評価</th>
			<th>波の大きさ</th>
			<th>レビュー</th>
			<th>日の出</th>
			<th>日没</th>
			<th>風</th>
			<th>気温</th>
			<th>水温</th>
		</tr>
	</thead>
	<tbody>
		<% @forecasts.each do |forecast| %>
		<tr>
			<td><%= forecast.local.user_name %></td>
			<td><%= forecast.spot.name %></td>
			<td><div id="star-rate2-<%= forecast.id %>"></div>
				<script>
					$('#star-rate2-<%= forecast.id %>').raty({
						size      : 50,
						starOff   : '<%= asset_path('star-off.png') %>',
						starOn    : '<%= asset_path('star-on.png') %>',
						starHalf  : '<%= asset_path('star-half.png') %>',
						half      : true,
						readOnly  : true,
						score     : <%= forecast.rate %>,
					});
				</script>
			</td>
			<td><%= forecast.size %></td>
			<td><%= forecast.review %></td>
			<td><%= forecast.sunrise.strftime('%H:%M') %></td>
			<td><%= forecast.sunset.strftime('%H:%M') %></td>
			<td><%= forecast.wind %></td>
			<td><%= forecast.temperature %></td>
			<td><%= forecast.water_temperature %></td>
		</tr>
		<% end %>
	</tbody>
</table>