<h1>Public::Reports#index</h1>
<p>Find me in app/views/public/reports/index.html.erb</p>
<h1>波情報一覧</h1>
<table>
	<thead>
		<tr>
			<th>投稿日</th>
			<th>投稿写真</th>
			<th>ユーザーID</th>
			<th>スポット</th>
			<th>波評価</th>
			<th>波の大きさ</th>
			<th>レビュー</th>
			<th>使用板</th>
			<th>入水時間</th>
			<th>風</th>
			<th>気温</th>
			<th>水温</th>
		</tr>
	</thead>
	<tbody>
		<% @reports.each do |report| %>
		<tr>
			<td><%= report.created_at.strftime('%m/%d') %></td>
			<td><%= attachment_image_tag report, :report_image, fallback: "no-image.png", :size => "100x100" %></td>
			<td><%= report.user.id %></td>
			<td><%= report.spot.name %></td>
			<td><%= report.rate %></td>
			<td><%= report.size %></td>
			<td><%= report.review %></td>
			<td><%= report.board %></td>
			<td><%= report.time.strftime('%H:%M') %></td>
			<td><%= report.wind %></td>
			<td><%= report.temperature %></td>
			<td><%= report.water_temperature %></td>
		</tr>
		<% end %>
	</tbody>
</table>