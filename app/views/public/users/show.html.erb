<div class="user-show container">
	<h1 class="title">プロフィール	</h1>
	<div class="row">
		<div class="user-show-box col-sm-12">
			<div class="image">
				<%= attachment_image_tag @user, :user_image, fallback: "no-profile-img.png", class: "user-image" %>
			</div>
			<div class="detail">
				<table>
					<tr>
						<th>ユーザーネーム</th><td><%= @user.user_name %></td>
					</tr>
					<tr>
						<th>性 名</th>
						<td><%= @user.last_name %> <%= @user.first_name %></td>
					</tr>
					<tr>
						<th>メールアドレス</th>
						<td><%= @user.email %></td>
					</tr>
					<tr>
						<th>レベル</th>
						<td><%= @user.level %></td>
					</tr>
					<tr>
						<th>ユーザーid</th>
						<td><%= @user.id %></td>
					</tr>
				</table>
			</div>
			<p><%= link_to "編集する", edit_user_path(current_user), class: "btn btn-primary user-btn" %></p>
			<p><%= link_to "退会する", users_confirm_path, class: "btn btn-danger user-btn" %></p>
		</div>
	</div>
</div>