<div class="user-edit container">
  <h1 class="title">ユーザー情報編集</h1>
  <div class="row">
    <div class="user-edit-form col-sm-12">
      <%= form_for @user do |f| %>
        <div class="image-form">
        	<%= attachment_image_tag @user, :user_image, fallback: "no-profile-img.png", class: "edit-user-image" %><br>
        	<%= f.attachment_field :user_image, class: "image-btn" %><br>
        </div>
        <div class="detail-form">
          <table>
            <tr>
              <th><%= f.label :性 %></th>
              <td><%= f.text_field :last_name %></td>
            </tr>
            <tr>
              <th><%= f.label :名 %></th>
              <td><%= f.text_field :first_name %></td>
            </tr>
            <tr>
              <th><%= f.label :ユーザーネーム %></th>
              <td><%= f.text_field :user_name %></td>
            </tr>
            <tr>
              <th><%= f.label :email %></th>
              <td><%= f.email_field :email %></td>
            </tr>
            <tr>
              <th><%= f.label :レベル %></th>
              <td><%= f.select :level, User.levels.keys, {} %></td>
            </tr>
          </table>
        </div>
        <%= f.submit "変更する", class: "btn btn-primary submit-btn" %>
      <% end %>
    </div>
  </div>
</div>