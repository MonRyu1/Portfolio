<h1>Public::Users#edit</h1>
<p>Find me in app/views/public/users/edit.html.erb</p>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <%= form_for @user do |f| %>
      	<%= attachment_image_tag @user, :user_image, fallback: "no-profile-img.png", :size => "200x200" %><br>
      	<%= f.attachment_field :user_image %><br>
        <div class="field">
          <%= f.label :性 %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        </div>
        <div class="field">
          <%= f.label :名 %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </div>
        <div class="field">
          <%= f.label :ユーザーネーム %>
          <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>
        </div>
        <div class="field">
          <%= f.label :レベル %>
          <%= f.select :level, User.levels.keys, {} %>
        </div>
        <div class="actions">
          <%= f.submit "変更する", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>