<div class="user-confirm">
	<div class="user-confirm-background">
		<div class="user-confirm-box">
			<h2 class="title">本当に退会しますか？</h2>
			<%= link_to "退会しない", user_path(current_user), class: "btn btn-primary confirm-btn" %>

			<% if user_signed_in? && @user.id == current_user.id %>
				<%= link_to "退会する", users_leave_path(current_user), method: :put, "data-confirm" => "本当に退会しますか？", class: "btn btn-danger confirm-btn" %>
			<% end %>
		</div>
	</div>
</div>