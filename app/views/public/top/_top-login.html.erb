<div class="report-container">
	<h2 class="title">波情報</h2>
	<h4 class="link"><%= link_to "MORE >>", reports_path %></h4>
	<div class="new-report-box">
		<span class="box-title">NEW !!</span>
		<ul>
			<% @reports.first(5).each do |report| %>
				<li class="new-report">
					<%= link_to report_path(report) do %>
						<%= attachment_image_tag report, :report_image, fallback: "no-image.png", :size => "180x180", class: "report-image" %>
					<% end %>
					<div class="report-detail">
						<div><%= report.spot.name %></div>
						<div id="star-rate-<%= report.id %>"></div>
						<script>
							$('#star-rate-<%= report.id %>').raty({
								size      : 36,
								number    : 5,
								starOff   : '<%= asset_path('stars/star-off.png') %>',
								starOn    : '<%= asset_path('stars/star-on.png') %>',
								starHalf  : '<%= asset_path('stars/star-half.png') %>',
								half      : true,
								readOnly  : true,
								score     : <%= report.rate %>,
							});
						</script>
					</div>
				</li>
			<% end %>
		</ul>
	</div>
</div>
<script>
	$(function(){
	$('.report-image').mouseover(function(){
		$(this).addClass('action');
	});
	$('.report-image').mouseout(function(){
		$(this).removeClass('action');
	});
});
</script>

