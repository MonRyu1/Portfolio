<div class="top-shop-container">
	<% @shops.each do |shop| %>
		<div class="top-shop-box">
			<%= link_to shop_path(shop) do %>
				<%= attachment_image_tag shop, :shop_image, fallback: "no-image.png", class: "top-shop-image" %>
			<% end %>
			<div class="top-shop-name">
				<h4><%= shop.name %> (<%= shop.area.name %>)</h4>
			</div>
		</div>
	<% end %>
</div>
<h4 class="top-shop-link"><%= link_to "MORE >>", shops_path %></h4>