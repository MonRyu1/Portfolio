<% if user_signed_in? || local_signed_in? || admin_signed_in? %>
	<div class="top-contents container">
		<div class="row">
			<div class="col-sm-9">

				<%= render 'public/top/top-login' %>

			</div>
			<div class="col-sm-3">

				<%= render 'public/top/top-weather' %>

			</div>
		</div>
	</div>
<% else %>
	<div class="top-visual"></div>
	<div class="top-contents container">
		<div class="row">
			<div class="col-sm-12">

				<%= render 'public/top/top-public' %>

			</div>
		</div>
	</div>
<% end %>
