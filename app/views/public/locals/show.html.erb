<div class="local-show container">
	<h1 class="title">プロフィール	</h1>
	<div class="row">
		<div class="local-show-box col-sm-12">
			<div class="image">
				<%= attachment_image_tag @local, :local_image, fallback: "no-profile-img.png", class: "local-image" %>
			</div>
			<div class="detail">
				<table>
					<tbody>
						<tr>
							<th>ユーザーネーム</th><td><%= @local.user_name %></td>
						</tr>
						<tr>
							<th>性 名</th><td><%= @local.last_name %> <%= @local.first_name %></td>
						</tr>
						<tr>
							<th>メールアドレス</th><td><%= @local.email %></td>
						</tr>
						<tr>
							<th>レベル</th><td><%= @local.level %></td>
						</tr>
						<tr>
							<th>ローカルid</th><td><%= @local.id %></td>
						</tr>
						<tr>
							<th>所属ショップ</th><td><%= @local.shop.name %></td>
						</tr>
					</tbody>
				</table>
			</div>
			<p><%= link_to "編集する", edit_local_path(current_local), class: "btn btn-primary local-btn" %></p>
			<p><%= link_to "退会する", locals_confirm_path, class: "btn btn-danger local-btn" %></p>
		</div>
	</div>
</div>