<h2>新規会員登録（ローカル）</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "locals/shared/error_messages", resource: resource %>

  <%= attachment_image_tag @local, :local_image, fallback: "no-image.png", :size => "100x100" %><br>
  <%= f.attachment_field :local_image %><br>

  <div class="field">
    <%= f.label :性 %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>

  <div class="field">
    <%= f.label :名 %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :ユーザーネーム %><br />
    <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>
  </div>

  <div class="field">
    <%= f.label :ショップ %><br />
    <%= f.collection_select :shop_id, Shop.all, :id, :name , :prompt => "select" %>
  </div>

  <div class="field">
    <%= f.label :レベル %><br />
    <%= f.select :level, User.levels.keys, {} %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "locals/shared/links" %>
