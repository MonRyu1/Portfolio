<div class="header">
  <diV class="header-logo">
    <%= link_to root_path do %>
      <img src="<%= asset_path "Logo.png" %>" width="200" height="65">
    <% end %>
  </div>
  <% if user_signed_in? %>
    <div id="tab-menu">
      <a class="trigger" href="#" >
        <%= attachment_image_tag current_user, :user_image, fallback: "no-profile-img.png", :size => "50x50", class: "user-img" %>
      </a>
    </div>
    <div id="tab-contents">
      <div id="tab">
        <p>ユーザー</p>
      </div>
    </div>
  <% elsif local_signed_in? %>
   <div id="tab-menu">
      <a class="trigger" href="#" >
        <%= attachment_image_tag current_local, :local_image, fallback: "no-profile-img.png", :size => "50x50", class: "local-img" %>
      </a>
    </div>
    <div id="tab-contents">
      <div id="tab">
        <p>ローカル</p>
      </div>
    </div>
  <% elsif admin_signed_in? %>
    <div id="tab-menu">
      <a class="trigger" href="#" >
        <img src="<%= asset_path "no-profile-img.png" %>" width="50" height="50" class="user-img" >
      </a>
    </div>
    <div id="tab-contents">
      <div id="tab">
        <p>管理者</p>
      </div>
    </div>
  <% else %>
    <div id="tab-menu">
      <a class="trigger" href="#" >
        <img src="<%= asset_path "no-profile-img.png" %>" width="50" height="50" class="user-img">
      </a>
    </div>
    <div id="tab-contents">
      <div id="tab">
        <P><%= link_to "ユーザーログイン", user_session_path %></P>
        <p><%= link_to "ローカルログイン", local_session_path %></p>
        <p><%= link_to "管理者", admin_session_path %></p>
      </div>
    </div>
  <% end %>
  <script>
    $('#tab-contents #tab').hide();
    $('#tab-menu a').on('click', function() {
      $(this).toggleClass('active');
      $('#tab-contents #tab').fadeToggle();
    return false;
    });
  </script>
</diV>